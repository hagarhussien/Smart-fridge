    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:src="@drawable/google_icon"
        />
    <ImageView
        android:layout_width="48dp"

        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:src="@drawable/facebook_icon"
        />
    <ImageView
        android:layout_width="48dp"
