<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_17"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/baseline_person_pin_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_18"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useptn"
        android:text="User Name"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Emaptn"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_marginTop="250dp"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/homptn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="20dp"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settptn"
        android:text="Settings"
        android:textColor="@color/black"
        android:layout_marginTop="400dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_settings_24"
        android:drawablePadding="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpptn"
        android:text="Help $ feedback"
        android:textColor="@color/black"
        android:layout_marginTop="450dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_help_24"
        android:drawablePadding="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outptn"
        android:text="Log out"
        android:textColor="@color/black"
        android:layout_marginTop="500dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawablePadding="20dp" />

</RelativeLayout>