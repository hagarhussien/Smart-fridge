<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_17"
    android:orientation="vertical"
    >


    <com.google.android.material.button.MaterialButton
        android:id="@+id/logptn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_logout_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/superptn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#8A8B0B9F"
android:layout_gravity="center"
        android:hint=" Supermarket Phone"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColorHint="#FFFBFB"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/userEmptn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
      android:layout_gravity="center"
        android:background="#8A8B0B9F"

        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="#FFFBFB"
        android:textSize="20dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/phoneNuptn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:layout_marginTop="20dp"
        android:background="#8A8B0B9F"
android:layout_gravity="center"
        android:hint="Your Phone Number"
        android:inputType="phone"
        android:padding="5dp"
        android:textColorHint="#FFFBFB"
        android:textSize="20dp"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/orderNaptn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
     android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#8A8B0B9F"

        android:hint="Product Name"
        android:inputType="text"
        android:padding="5dp"
        android:textColorHint="#FFFBFB"
        android:textSize="20dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/quantptn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#8A8B0B9F"

        android:hint="Quantity"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="#FFFBFB"
        android:textSize="20dp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/submitptn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginTop="50dp"
       android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/round_primary"

        />
</LinearLayout>